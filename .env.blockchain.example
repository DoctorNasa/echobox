# Blockchain Configuration
# Copy this file to .env.local and fill in your values

# Network Configuration (mainnet or sepolia)
NEXT_PUBLIC_NETWORK=sepolia

# RPC URLs (optional - will use public endpoints if not provided)
NEXT_PUBLIC_RPC_URL=
NEXT_PUBLIC_RPC_URL_MAINNET=
NEXT_PUBLIC_RPC_URL_SEPOLIA=

# EchoBox Smart Contract Addresses
# Deploy the contract and add the addresses here
NEXT_PUBLIC_ECHOBOX_ADDRESS_SEPOLIA=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_ECHOBOX_ADDRESS_MAINNET=0x0000000000000000000000000000000000000000

# Block Explorer API Keys (optional - for enhanced features)
NEXT_PUBLIC_ETHERSCAN_API_KEY=

# Price Oracle Configuration (optional)
NEXT_PUBLIC_PRICE_ORACLE_API_KEY=
NEXT_PUBLIC_PRICE_ORACLE_URL=

# Wallet Connect Project ID (if using WalletConnect)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Alchemy/Infura API Keys (recommended for production)
NEXT_PUBLIC_ALCHEMY_API_KEY=
NEXT_PUBLIC_INFURA_API_KEY=
